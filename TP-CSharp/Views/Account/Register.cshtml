@model TP_CSharp.Models.RegisterViewModel
@{
    ViewData["Title"] = "S'inscrire";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-6 text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Mot de passe</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mot de passe" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirmer le mot de passe</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmer le mot de passe" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            
            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-paper-plane me-2"></i>S'inscrire</button>
            </div>
        </form>
    </div>
</div>